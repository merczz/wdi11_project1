<div class="album">
<h1>Sign Up</h1>

<%= form_for(:user, url: '/users') do |f| %>
<%= f.text_field :name, :placeholder => "Login name" %> <br>
<%= f.email_field :email, :placeholder => "Email" %> <br>	
<%= f.password_field :password, :placeholder => "Password" %> <br>
<%= f.password_field :password_confirmation, :placeholder => "Retype password" %> 
<br>
<br>
<%=f.submit "Sign Up", class:"btn-submit"  %>


<% end %>
</div>