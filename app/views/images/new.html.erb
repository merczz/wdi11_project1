
<div class="album">
<%= link_to "Back to Album", album_path(@album.id) %>
<h1> <%=@album.name %></h1>
<p> add new images </p>

    <%= form_for(@image, url:'/images') do |f| %>  
    <%= f.text_area :name, :placeholder => "New image name" %> 
    <br>
    <%= f.text_area :url, :placeholder => "URL" %>
    <br>
    <%= f.hidden_field :album_id, :value => @album.id %>
    <%= f.submit "add new image", class:"btn-submit" %> 
	<% end %>


</div>